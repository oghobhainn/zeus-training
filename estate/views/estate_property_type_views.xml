<?xml version="1.0"?>
<odoo>
    <record id="estate_model_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">est.estates.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- tree view -->
    <record id="estate_model_type_tree" model="ir.ui.view">
        <field name="name">estate.model.type.tree</field>
        <field name="model">est.estates.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_model_type_form" model="ir.ui.view">
        <field name="name">estate.model.type.form</field>
        <field name="model">est.estates.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" name="open_property_type_offers">
                            <field string="Offers" name="offer_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Unknown"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
               </sheet>
            </form>
        </field>
    </record>
</odoo>
