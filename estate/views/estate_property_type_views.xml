<?xml version="1.0"?>
<odoo>
    <record id="estate_type_model_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

     <!-- list view -->
    <record id="estate_type_model_tree" model="ir.ui.view">
        <field name="name">estate.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_type_model_search" model="ir.ui.view">
        <field name="name">estate.type.model.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search string="Estate search types">
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="estate_type_model_view_form" model="ir.ui.view">
        <field name="name">estate.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>