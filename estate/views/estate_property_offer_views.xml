<?xml version="1.0"?>
<odoo>
     <!-- list view -->
    <record id="estate_offer_model_tree" model="ir.ui.view">
        <field name="name">estate.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offers">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_accept" type="object" icon="fa-check"/>
                <button name="action_refuse" type="object" icon="fa-times"/>
                <field name="status" />
            </tree>
        </field>
    </record>

    <record id="estate_offer_model_view_form" model="ir.ui.view">
        <field name="name">estate.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <header>
                    <button name="action_accept" type="object" string="ACCEPT"/>
                    <button name="action_refuse" type="object" string="REFUSE"/>
                </header>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="validity" />
                        <field name="date_deadline" />
                        <field name="status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>