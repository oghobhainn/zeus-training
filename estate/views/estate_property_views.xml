<?xml version="1.0"?>
<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">est.estates.property</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="estate.estate_model_form_filter"/>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <!-- list view -->
    <record id="estate_model_tree" model="ir.ui.view">
        <field name="name">estate.model.tree</field>
        <field name="model">est.estates.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-bf="state == 'offer accepted'"
                                        decoration-muted="state == 'sold'"
                                        decoration-success="state == 'offer accepted' or state == 'offer received'">
                <field name="name"/>
                <field name="postcode"/>
                <field name ="type_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="state" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_model_form" model="ir.ui.view">
        <field name="name">estate.model.form</field>
        <field name="model">est.estates.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_property_sold" type="object" string="Sold" attrs="{'invisible': [ '|', ('state', '=', 'sold'), ('state', '=', 'cancelled')]}"/>
                    <button name="action_property_cancelled" type="object" string="Cancel" attrs="{'invisible': [ '|', ('state', '=', 'sold'), ('state', '=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="new,offer,offer received, offer accepted, sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Unknown"/>
                        </h1>
                    </div>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <separator/>
                    <group>
                        <group>
                            <field name="type_id" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" context="{
                                'tree_view_ref': 'estate.estate_model_offer_tree'}" mode="tree"
                                attrs="{'readonly':[ '|', '|', ('state','=','offer accepted'), ('state','=','sold'), ('state','=','cancelled')]}"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesman"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                    </notebook>
               </sheet>
            </form>
        </field>
    </record>

    <!-- search form -->
    <record id="estate_model_form_filter" model="ir.ui.view">
        <field name="name">estate.select</field>
        <field name="model">est.estates.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="type_id"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <filter string="Available" name="available" domain="['|', ('state','=','new'),('state','=','offer received')]"/>
                <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>