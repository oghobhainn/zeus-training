<odoo>
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_properties_tags_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tags.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property Tags" editable="bottom">
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_tags_form_view" model="ir.ui.view">
        <field name="name">estate.property.tags.form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tags">
                <sheet>
                    <group>
                        <field name="name" string="Name"/>
                        <field name="color" string="Color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_tags_search_view" model="ir.ui.view">
        <field name="name">estate.property.tags.search</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <search string="Search Property Tags">
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>
