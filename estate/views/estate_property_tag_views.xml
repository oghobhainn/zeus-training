<?xml version="1.0"?>
<odoo>
    <record id="estate_model_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">est.estates.property.tag</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- tree view -->
    <record id="estate_model_tag_tree" model="ir.ui.view">
        <field name="name">estate.model.tag.tree</field>
        <field name="model">est.estates.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- search form -->
    <record id="estate_model_tag_form_filter" model="ir.ui.view">
        <field name="name">estate.select</field>
        <field name="model">est.estates.property.tag</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
            </search>
        </field>
    </record>

</odoo>
