<?xml version="1.0"?>
<odoo>
    <record id="estate_tag_model_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

     <!-- list view -->
    <record id="estate_tag_model_tree" model="ir.ui.view">
        <field name="name">estate.tag.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Properties" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_tag_model_search" model="ir.ui.view">
        <field name="name">estate.tag.model.search</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <search string="Estate tag search tags">
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="estate_tag_model_view_form" model="ir.ui.view">
        <field name="name">estate.tag.form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tag">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>