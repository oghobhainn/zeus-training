<?xml version="1.0"?>
<odoo>
    <record id="property_tags_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tags.tree</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <tree string="Property Tags" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="property_tags_view_form" model="ir.ui.view">
        <field name="name">estate.property.tags.form</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <form string="Property Tags">
                <sheet>
                    <div class="Title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_tags_view_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>