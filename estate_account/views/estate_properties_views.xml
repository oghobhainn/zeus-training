<?xml version="1.0"?>
<odoo>
    <record id="estate_properties_view_form" model="ir.ui.view">
        <field name="name">estates.properties.view.form.inherit.estate</field>
        <field name="model">est.estates.property</field>
        <field name="inherit_id" ref="estate.estate_model_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="before">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="open_property_invoices">
                        <field string="Invoices" name="invoice_count" widget="statinfo"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>